@page
@model oh7.CspEditor.WebApp.Pages.Project.EditModel

@{
    ViewData["Title"] = "Edit CSP Project";
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CspProject.Id" />
            <input type="hidden" asp-for="CspProject.OwnerId" />
            <div class="form-group">
                <label asp-for="CspProject.Name" class="control-label"></label>
                <input asp-for="CspProject.Name" class="form-control" />
                <span asp-validation-for="CspProject.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CspProject.Description" class="control-label"></label>
                <textarea asp-for="CspProject.Description" class="form-control"></textarea>
                <span asp-validation-for="CspProject.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" /> <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
