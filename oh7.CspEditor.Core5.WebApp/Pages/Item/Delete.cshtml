@page
@model oh7.CspEditor.Core5.WebApp.Pages.Item.DeleteModel

@{
    ViewData["Title"] = "Delete Item";
}

<h4>@ViewData["Title"]</h4>
<h5>Are you sure you want to delete this?</h5>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CspDirectiveItem.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CspDirectiveItem.Content)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CspDirectiveItem.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CspDirectiveItem.Description)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="CspDirectiveItem.Id" />
        <input type="hidden" asp-for="CspProjectId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> <a asp-page="/Directive/Index" asp-route-projectId="@Model.CspProjectId" class="btn btn-secondary">Cancel</a>
    </form>
</div>
