@page
@model oh7.CspEditor.Core5.WebApp.Pages.Item.CreateSourceModel

@{
    ViewData["Title"] = "Create Source";
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CspProjectId" />
            <input type="hidden" asp-for="CspDirectiveItem.CspDirectiveItemTypeId" />
            <input type="hidden" asp-for="CspDirectiveItem.CspDirectiveId" />
            <div class="form-group">
                <label asp-for="CspDirectiveItem.Content" class="control-label"></label>
                <input asp-for="CspDirectiveItem.Content" class="form-control" />
                <span asp-validation-for="CspDirectiveItem.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CspDirectiveItem.Description" class="control-label"></label>
                <textarea asp-for="CspDirectiveItem.Description" class="form-control"></textarea>
                <span asp-validation-for="CspDirectiveItem.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" /> <a asp-page="/Directive/Index" asp-route-projectId="@Model.CspProjectId" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
